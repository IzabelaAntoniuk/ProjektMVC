@model IEnumerable<MVCBiblioteka.Models.OrderDetail>

@{
    ViewBag.Title = "Szczegóły zamówienia";
}

<h2>Szczegóły zamówienia</h2>

<p>
    @Html.ActionLink("Stwórz nowe", "Create")
</p>
<table class="table">
    <tr>
