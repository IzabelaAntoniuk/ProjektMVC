@model MVCBiblioteka.Models.Book


@{
    ViewBag.Title = "Szczegóły książki";
}

<h2>Szczegóły książki</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.premiereDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.premiereDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublisherID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publishers.FirstOrDefault().name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AuthorID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors.FirstOrDefault().allname)
            @Html.DisplayFor(model => model.Authors.FirstOrDefault().surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.FirstOrDefault().name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.state)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.state)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

    </dl>
</div>
<p>
@if (User.IsInRole("Administrator"))
{
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.BookID })
                                                                  }
    @Html.ActionLink("Wróć do listy", "Index")
</p>

<p class="button">
    @Html.ActionLink("Dodaj do koszyka", "AddToCart", "BooksCart", new { id = Model.BookID }, "")
</p>
